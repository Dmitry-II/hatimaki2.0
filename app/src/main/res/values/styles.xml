<resources>
    <style name="cardViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">@dimen/card_image_width</item>
        <item name="android:layout_height">@dimen/card_image_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CategoryButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_size_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="ProductCardStyle">
        <item name="android:layout_width">@dimen/product_card_width</item>
        <item name="android:layout_height">@dimen/product_card_height</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>